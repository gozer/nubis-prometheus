#!/bin/bash -l

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin

cleanup() {
  echo "Starting Prometheus"
  start prometheus BACKUP=SKIP >/dev/null 2>&1
}

save() {
  # Ensures we start prometheus no matter what once done
  if [ "$UPSTART_JOB" == "" ]; then
    trap cleanup EXIT

    # Prometheus backs itself up after stopping
    stop prometheus

    # Prometheus was running, it will call us back once it's done.
    if [ "$?" == "0" ]; then
      exit 0
    fi
  fi

  # Backup, purge old backups and unfinished/failed ones
  duply prometheus backup_purge_cleanup --force
}

restore() {
  if [ "$UPSTART_JOB" == "" ]; then
    stop prometheus BACKUP=SKIP
  fi

  # Clean out Prometheus
  rm -rf /var/lib/prometheus/*

  # Recover
  duply prometheus restore /var/lib/prometheus --force

  # Cleanup just to be certain
  rm -f /var/lib/prometheus/PRISTINE

  exit 0
}

case "$1" in
   save)
   save
   ;;
   restore)
   restore
   ;;
   *)
   echo "$0 [save|restore]"
   exit
   ;;
esac

